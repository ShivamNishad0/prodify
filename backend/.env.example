# Server Configuration
PORT=5001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/crm

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Frontend URLs
FRONTEND_URL=http://localhost:5173
WEBSITE_URL=http://localhost:5174

# Email Configuration (for welcome/password reset emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Keycloak Configuration (Optional - for website user authentication)
# Set these to enable Keycloak authentication for website users
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=prodify
KEYCLOAK_CLIENT_ID=crm-backend
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Session Secret (for Keycloak middleware)
SESSION_SECRET=your-session-secret-change-in-production

