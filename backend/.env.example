# Server Configuration
NODE_ENV=development
PORT=5001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Database (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/prodify-crm

# Email Configuration (for password reset)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Website URL
WEBSITE_URL=http://localhost:5174

# ============================================
# Keycloak Configuration
# ============================================

# Keycloak Server URL
KEYCLOAK_URL=http://localhost:8080

# Keycloak Realm
KEYCLOAK_REALM=prodify

# Keycloak Backend Client (for admin panel)
KEYCLOAK_CLIENT_ID=crm-backend
KEYCLOAK_CLIENT_SECRET=your-backend-client-secret

# Keycloak Admin Client (for server-side operations)
KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
KEYCLOAK_ADMIN_CLIENT_SECRET=your-admin-cli-secret

# Session Secret (for express-session)
SESSION_SECRET=your-session-secret-change-in-production

